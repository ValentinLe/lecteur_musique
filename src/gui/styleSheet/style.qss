
 QMainWindow {
    background-color: #353535;
}

QWidget {
    color: white;
}

QWidget[class="queue"] {
    background-color: #535353;
    border: 1px solid #ababab;
    border-radius: 4px;
}

QPushButton {
    border-radius: 25px;
}

QPushButton:hover {
    background-color: rgba(20, 172, 255, 0.4);
}

QPushButton:pressed {
    background-color: rgba(20, 172, 255, 0.6);
}

QWidget[class="searchBar"] {
    background-color: #535353;
    selection-background-color: rgb(9, 144, 255);
}

QWidget[class="title"], QWidget[class="searchBar"] {
    border: none;
    padding: 8px;
    font-size: 16px;
    font-weight: bold;
}

QWidget[class="searchBar"] {
    padding: 6px 8px;
    border: 1px solid #ababab;
    border-radius: 4px;
}

QWidget[class="songName"] {
    padding: 8px 0;
    font-size: 18px;
    font-weight: bold;
}

QWidget[class="author"] {
    font-size: 16px;
    padding: 8px 0;
}

QWidget[class="duration"] {
    font-size: 16px;
}

QWidget[class="bold"] {
    font-weight: bold;
}

QScrollBar:vertical{
  background: palette(base);
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
  width: 16px;
  margin: 0px;
}

QScrollBar::handle:vertical{
  background-color: palette(alternate-base);
  border-radius: 2px;
  min-height: 20px;
  margin: 2px 2px 2px 2px;
}

QScrollBar::handle:vertical:hover{
  background-color: #353535;
}

QScrollBar::add-line:vertical{
  background: none;
  height: 0px;
  subcontrol-position: right;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical{
  background: none;
  height: 0px;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

QSlider {
    padding-top: 2px;
}

QSlider::groove {
    height: 6px;
    background: white;
}

QSlider::handle {
    background: #14acff;
}

QSlider::sub-page {
    background: #14acff;
}
